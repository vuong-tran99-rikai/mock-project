<% provide(:title, 'Edit discounts') %>
<h1>Edit discounts</h1>
<div class="row" style="justify-content: center; color: black">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@discount, data: { turbo: false }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name_KM %>
      <%= f.text_field :name_KM, class: 'form-control' %>
      <%= f.label :gia_KM %>
      <%= f.number_field :gia_KM, class: 'form-control',inputmode: 'numeric' %> 
      <%= f.label :start_day %>
      <%= f.date_field :start_day, class: 'form-control' %>
      <%= f.label :end_day %>
      <%= f.date_field :end_day, class: 'form-control' %>
      <%= f.submit "Update Discounts", class: "btn btn-primary",style: "margin-top : 10px" %>
    <% end %>
  </div>
</div>

<style>
  label {
    font-weight: bold;
  }

</style>