<% provide(:title, 'Create discounts') %>
<h1>Create discounts</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <div style="text-align:right">
   <span><%= link_to "Discounts list", "/discount" %></span>
  </div>
    <%= form_for(@discounts, data: { turbo: false }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name_KM %>
      <%= f.text_field :name_KM, class: 'form-control' %>
      <%= f.label :gia_KM %>
      <%= f.number_field :gia_KM, class: 'form-control' %>
      <%= f.label :start_day %>
      <%= f.date_field :start_day, class: 'form-control' %>
      <%= f.label :end_day %>
      <%= f.date_field :end_day, class: 'form-control' %>
      <%# <select name="status" class="custom-select"> 
        <option value="1">hiển thị</option>
        <option value="0">tạm tắt</option>
      </select> %>
      
      <%#f.select :status, options_for_select(Category.statuses.map { |key, value| [key, value] if [0, 1].include?(value) }.compact), {}, class: 'custom-select' %>

       
      <%= f.submit "Create Discounts", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>